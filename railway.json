{
    "$schema": "https://railway.app/railway.schema.json",
    "build": {
      "builder": "DOCKERFILE",
      "dockerfilePath": "backend/Dockerfile"
    },
    "deploy": {
      "startCommand": "bash /app/docker-entrypoint.sh",
      "restartPolicyType": "ON_FAILURE",
      "restartPolicyMaxRetries": 10
    }
  }